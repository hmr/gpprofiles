# Some example alias instructions
# If these are enabled they will be used instead of any instructions
# they may mask.  For example, alias rm='rm -i' will mask the rm
# application.  To override the alias instruction use a \ before, ie
# \rm will call the real rm not the alias.
#
# Interactive operation...
# alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'
#
# Default to human readable figures
# alias df='df -h'
# alias du='du -h'
#
# Misc :)
# alias whence='type -a'                        # where, of a sort
# alias grep='grep --color'                     # show differences in colour
# alias egrep='egrep --color=auto'              # show differences in colour
# alias fgrep='fgrep --color=auto'              # show differences in colour
#
# Some shortcuts for different directory listings
# alias ls='ls -hF --color=tty'                 # classify files in colour
# alias dir='ls --color=auto --format=vertical'
# alias vdir='ls --color=auto --format=long'
alias ls='gls --color=auto'                    # color ls
alias ll='gls -l'                              # long list
alias la='gls -A'                              # all but . and ..
alias l='gls -CF'                              #
alias lh='gls -lrth'
alias ssh='ssh -A'
alias sudo='sudo -E'
#alias isodate="date --iso-8601=seconds | sed -e 's/\+00:00/Z/' -e 's/[-:]//g'"
#alias utcisodate="date --utc --iso-8601=seconds | sed -e 's/\+00:00/Z/' -e 's/[-:]//g'"

alias utcisodate_short=" date --utc +'%Y%m%dT%H%M%SZ'"
alias utcisodate_long="date --utc +'%Y-%m-%dT%H:%M:%SZ'"
alias utcisodate_longp="date --utc +'%Y-%m-%dT%H%M%SZ'"
alias isodate_short="date +'%Y%m%dT%H%M%S%z'"
alias isodate_long="date +'%Y-%m-%dT%H:%M:%S%z'"
alias isodate_longp="date +'%Y-%m-%dT%H%M%S%z'"

# Functions
echo "  function spiceurl"
function spiceurl {
    if [ x$1 = "x" ]; then return; fi
    echo spice://`hostname`:$(ps ax | grep $1 | grep -oP '\-spice port=\d+' | grep -oP '\d+')
}

echo "  function spicelist"
function spicelist {
    for VMNAME in `ps ax | grep qemu-system-x86_64 | grep -v grep | awk '{print $8}'`
    do
        echo `spiceurl $VMNAME` [$VMNAME]
    done
}

