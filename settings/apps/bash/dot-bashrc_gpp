# vim: ft=sh:ts=2:sw=0:et

# dot-bashrc_all
# ORIGIN: 2020-06-28 02:32
# AUTHOR: H.Maruyama

if [ -f ~/.gpprofiles ]; then
  source ~/.gpprofiles
  echo -n "GPP found. "
  echo -n "Version: ${GPP_VERSION}. "
  echo    "Installed on ${GPP_HOME}"

  if [ -z "${GPP_VERSION}" -o -z "${GPP_HOME}" ]; then
    echo "CAUTION: GPP IS NOT PROPERLY INSTALLED."
    exit 1
  fi

  export GPP_HOME GPP_VERSION
  source ${GPP_HOME}/settings/apps/bash/dot-bashrc_gpp_function
  source ${GPP_HOME}/settings/apps/bash/dot-bashrc_gpp_history
  source ${GPP_HOME}/settings/apps/bash/dot-bashrc_gpp_alias
  source ${GPP_HOME}/settings/apps/bash/dot-bashrc_gpp_env
  source ${GPP_HOME}/settings/apps/bash/dot-bashrc_gpp_misc
  source ${GPP_HOME}/settings/apps/bash/dot-bashrc_gpp_macos

  # set shell prompt for bash
  case "`chkshell`" in
    bash)
      [ -r ~/.byobu/prompt ] && . ~/.byobu/prompt
      ;;
  esac
else
  echo "GPP not found. Bye"
fi

