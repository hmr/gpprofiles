# Part of GPP(General Puropose Profiles)
# vim: ft=tmux ts=2 sw=2 et fenc=utf-8 ff=unix

# tmux.conf.macos
# Tmux settings for macOS

## Sharing clipboard with system
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "pbcopy"
bind-key -T copy-mode-vi Enter send-keys -X copy-pipe-and-cancel "pbcopy"

# Reset the status bar
set-option -g  status-interval 5
set-option -g  status-left  "#[default]"  # reset
set-option -g  status-right "#[default]"  # reset

# Reference: https://blog.black-cat.jp/2018/12/tmux-status-line/
# Status line: left side
set-option -ag status-left  "#[default]#[fg=black,bg=white] \uF179 #[default] "
set-option -ag status-left  "#[fg=\#EEEEEE,bg=\#333333] #(/usr/sbin/sysctl kern.osproductversion | cut -d \" \" -f 2) "
set-option -ag status-left  "#[bg=colour054,fg=colour255] #{host_short} "
set-option -ag status-left  "#[bg=colour024,fg=colour255] #(#{TM_BIN_DIR}/print_ipaddr) "
set-option -ag status-left  "#[bg=colour148,fg=colour234] #{session_name}:w#{window_index} "

# Status line: right side
#set-option -ag status-right "#[bg=${TM_SL_BASE_BG},fg=white       ]î‚¶ #[fg=black,bg=white](#(#{TM_BIN_DIR}/print_spotify) "
set-option -ag status-right "#[fg=black,bg=white] (#(#{TM_BIN_DIR}/print_uptime)) "
set-option -ag status-right "#[fg=black,bg=brightyellow] [#(#{TM_BIN_DIR}/print_loadavg)] "
set-option -ag status-right "#[fg=black,bg=green] MP:#(#{TM_BIN_DIR}/print_mpressure)%% "
set-option -ag status-right "#[fg=\#EEEEEE,bg=${TM_SL_BASE_BG}][#(#{TM_BIN_DIR}/print_ydrate)]"
# set-option -ag status-right "#[bg=${TM_SL_BASE_BG},fg=\#EEEEEE]#(date +'[W%V/D%j]%Y-%m-%d(%a) %H:%M:%S%%:::z') "
set-option -ag status-right "#[bg=${TM_SL_BASE_BG},fg=\#EEEEEE][W%V/D%j]%Y-%m-%d(%a) %H:%M:%S "

