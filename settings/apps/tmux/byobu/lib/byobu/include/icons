PKG="byobu"

# UTF-8 support in the hardstatus is coming one day in Screen
if [ "$BYOBU_BACKEND" = "tmux" ] && [ "$BYOBU_CHARMAP" = "UTF-8" ]; then
	#ICON_C="‚ÑÉ"
	#ICON_F="‚Ñâ"
	ICON_C="C"
	ICON_F="F"
	ICON_RD="‚óÇ"
	ICON_WR="‚ñ∏"
	ICON_MAIL="‚çå"
	ICON_UP="‚ñ¥"
	ICON_DN="‚ñæ"
	ICON_TRASH="‚ô∏"
	ICON_WIFI=
	ICON_REBOOT="‚ü≥"
	ICON_UPDATES="!"
	ICON_UPGRADE="‚ö†"
	ICON_SECURITY="‚Äº"
	#ICON_KB="„éÖ"
	#ICON_MB="„éÜ"
	#ICON_GB="„éá"
	ICON_KB="K"
	ICON_MB="M"
	ICON_GB="G"
	ICON_TB="T"
	#ICON_KHz="„éë"
	#ICON_MHz="„éí"
	#ICON_GHz="„éì"
	ICON_KHz="KHz"
	ICON_MHz="MHz"
	ICON_GHz="GHz"
	#ICON_MBPS="„èî„é∞"
	ICON_MBPS="Mb"
	ICON_SESSION="„Ä£"
	ICON_LIVEPATCHED="üóπ "
else
	# Only use 0-127 ANSI: http://ascii-table.com/ascii.php
	ICON_C="C"
	ICON_F="F"
	ICON_RD="<"
	ICON_WR=">"
	ICON_MAIL="[M]"
	ICON_UP="^"
	ICON_DN="v"
	ICON_TRASH="T"
	ICON_WIFI=
	ICON_REBOOT="(R)"
	ICON_UPDATES="!"
	ICON_UPGRADE="/!\\\\\\"
	ICON_SECURITY="!!"
	ICON_KB="KB"
	ICON_MB="MB"
	ICON_GB="GB"
	ICON_TB="TB"
	ICON_KHz="kHz"
	ICON_MHz="MHz"
	ICON_GHz="GHz"
	ICON_MBPS="Mbps"
	ICON_SESSION="|"
	ICON_LIVEPATCHED="[/]"
fi
