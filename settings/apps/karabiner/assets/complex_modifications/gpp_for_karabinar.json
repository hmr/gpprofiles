              "^com\\.2X\\.Client\\.Mac$",
              "^com\\.vmware\\.fusion$",
              "^com\\.vmware\\.horizon$",
              "^com\\.vmware\\.view$",
              "^com\\.parallels\\.desktop$",
              "^com\\.parallels\\.vm$",
              "^com\\.parallels\\.desktop\\.console$",
